<div class="row">
    <div class="col-md-12 grid-margin">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h4 class="font-weight-bold mb-0">Banner Mangement</h4>
              </div>
              <div>
                  <button type="button" class="btn btn-primary btn-icon-text btn-rounded" data-toggle="modal" data-target="#myModal">
                    <i class="ti-link btn-icon-prepend"></i>Add New Banner
                  </button>
              </div>
            </div>
          </div>
    <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">All Banner</h4>
                <p class="card-description">
                  Manage <code>Banner</code>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped" id="brand-data">
                    <thead>
                      <tr>
                        <th>
                          Image
                        </th>
                        <th>
                           Url
                          </th>
                          <th>
                            Edit
                           </th>
                           <th>
                            Status
                          </th>
                           <th>
                             Delete
                           </th>
                      </tr>
                    </thead>
                    <tbody>

                      <% for (var i = 0; i < banner.length; i++) { %>
                    <tr class="data-row"> 
                        <input value="<%= banner[i].image; %>" type="hidden"class="image">
                        <td >
                           <img class="image" src="/uploads/banner/<%= banner[i].image; %> " value="<%= banner[i].image; %>" alt="image" data-item-image="<%=banner[i].image %>"/>
                        </td>
                        <td class="name" data-item-name="<%=banner[i].url %>"><%= banner[i].url %>
                        </td>
                        <td>
                            <button class=" btn btn-primary btn-rounded btn-icon"   id="edit_banner" data-item-id="<%=banner[i]._id %>" >
                              <i class="ti-pencil btn-icon-append"></i> 
                            </button>
                        </td> 
                        <td>
                            <label class="switch">
                               <input id="banner_status" data-uid="<%= banner[i].id%>" type="checkbox" onclick="return confirm('Aru You Sure to Want Change Status ?')" data-id="2" name="status" class="usersatusbtn" value="true" <% if(banner[i].status){if(banner[i].status){ %> checked <% }} %>>
                               <span class="slider round"></span>
                            </label>
                         </td>
                        
                        <td>
                            <a class=" btn btn-primary btn-rounded btn-icon" onclick="return confirm('Are You Sure to Delete This brand ?')" href="/admin/brand/<%=banner[i]._id %>/delete" >
                              <i class="ti-trash btn-icon-append"></i> 
                            </a>
                        </td>
                      </tr>
                     <% } %>
                    </tbody>
                  </table >
                </div>
              </div>
            </div>
          </div>        
</div>
 <!-- pop up brand -->
 <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add New Banner</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          
        </div>
        <div class="modal-body">
            <form method="post" action="/admin/banner" enctype="multipart/form-data">
                <div class="panel panel-default">
                    <div class="panel-body">
                            <div class="form-group">                              
                                <input type="text" id="banner_url" class="form-control" name="banner_url" placeholder="Provide Url">
                            </div>
                            <div class="form-group">
                                <label class="switch">
                                    <input type="checkbox" data-id="2" name="banner_status" class="emailsettings" value="true">
                                    <!-- <input type="checkbox" data-id="2" name="status" class="emailsettings" value="false"> -->
                                    <span class="slider round"></span>
                                </label>
                            </div>
                            <div class="form-group">                              
                                <input type="file" id="banner_image" class="form-control" name="banner_image" placeholder="">
                            </div>                            
                        <button type="submit" class="btn btn-success">Add New Banner</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
 
  <!-- Attachment edit  Modal -->
<div class="modal fade" id="edit_banner" tabindex="-1" role="dialog" aria-labelledby="edit-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="edit-modal-label">Edit Category</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="attachment-body-content">

          <form id="edit-brand" class="form-horizontal" method="POST" action="/admin/category/update"  enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <input type="hidden" name="brandid" class="form-control" id="modal-input-id" required>
                </div>
                <div class="form-group">
                  <label class="col-form-label" for="modal-input-name">Name</label>
                  <input type="text" name="brand_name" class="form-control" id="modal-input-name"  value="" required autofocus>
                </div>
                <div class="form-group">
                  <input type="hidden" class="form-control" id="modal-input-image">
                </div>
                <div class="form-group">
                  <input type="submit"  class="form-control" value="submit" required>
                </div>
