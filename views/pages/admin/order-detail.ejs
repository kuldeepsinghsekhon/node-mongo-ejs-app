                  <tr> <td> Attribute : <b><%= order.buybid.attr_val %></b></td></tr>
                  
                  <tr> <td>  Transaction ID : <b><%= order.payment.transaction.id%></b></td></tr>
                  <tr> <td>  Transaction Status : <b><%= order.payment.transaction.status%></b></td></tr>
                    <% }else{ %>
                      <tr> <td colspan="5" class="no-pis"><em>No Results.</em></td></tr>
