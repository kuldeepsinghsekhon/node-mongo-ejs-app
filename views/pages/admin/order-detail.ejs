        <div class="col-lg-6 grid-margin stretch-card">
          <div class="card"> 
             <div class="card-body">
              <h4 class="card-title">Order Detail</h4>
              <div class="table-responsive">
              <table class="table table-striped">
                <% if(order){ %>
                  <% 
                  let s = order.orderdate;
                  let d = new Date(s); 
                  d = d.toUTCString()
                  %>
                  <tr> <td>Product : <b><%= order.product.name %></b></td></tr>
                  <tr> <td> Order Id :  <b><%= order._id %></b></td></tr>
                  <tr> <td>  Order Date : <b><%= d %></b></td></tr>
                  <tr> <td>  Bid Price : <b><%= order.buybid.bidprice %></b></td></tr>
                  <!-- <tr> <td>  Attribute : <b><%= order.netprice %></b></td></tr> -->
